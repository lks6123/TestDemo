<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.shao.testdemo.MainActivity">

    <FrameLayout
        android:id="@+id/fram_main_activity"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:paddingLeft="@dimen/offset_8dp"
        android:paddingRight="@dimen/offset_8dp" />

    <LinearLayout
        android:paddingTop="@dimen/offset_4dp"
        android:id="@+id/tab_menu"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:gravity="bottom"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/txt_deal"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/background_tab_menu"
            android:drawablePadding="@dimen/offset_2dp"
            android:drawableTop="@drawable/drawable_tab_menu_deal"
            android:gravity="center"
            android:text="@string/home"
            android:textColor="@drawable/text_color_tab_menu" />

        <TextView
            android:id="@+id/txt_poi"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/background_tab_menu"
            android:drawablePadding="@dimen/offset_2dp"
            android:drawableTop="@drawable/drawable_tab_menu_poi"
            android:gravity="center"
            android:text="@string/shop"
            android:textColor="@drawable/text_color_tab_menu" />

        <TextView
            android:id="@+id/txt_user"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/background_tab_menu"
            android:drawablePadding="@dimen/offset_2dp"
            android:drawableTop="@drawable/drawable_tab_menu_user"
            android:gravity="center"
            android:text="@string/user"
            android:textColor="@drawable/text_color_tab_menu" />

        <TextView
            android:id="@+id/txt_more"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/background_tab_menu"
            android:drawablePadding="@dimen/offset_2dp"
            android:drawableTop="@drawable/drawable_tab_menu_more"
            android:gravity="center"
            android:text="@string/more"
            android:textColor="@drawable/text_color_tab_menu" />

    </LinearLayout>
</LinearLayout>
